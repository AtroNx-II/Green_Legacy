

Actor BridgeVerticalMovePlatform  14919
{
//$Category Terrain/MovePlatform
//$Arg0 "Distance"
//$Arg0ToolTip "Set Platform's Move distance"
//$Arg1 "Speed"
//$Arg1ToolTip "Set move speed"
//$Arg2 "StayDelay"
//$Arg2ToolTip "Set StayDelay"
Radius 60
Height 10
Var Int User_Delay_Move;
Activation THINGSPEC_ThingActs|THINGSPEC_ThingTargets|THINGSPEC_Switch
+BUMPSPECIAL
+NOBLOOD //Need!
+NOGRAVITY+SHOOTABLE+INVULNERABLE+ACTLIKEBRIDGE+SOLID+CANNOTPUSH+NOTARGET+CANPASS+NORADIUSDMG
States
	{
	Spawn:
		PLAT A 0
		PLAT A 1 
		PLAT A 1 ACS_NamedExecuteAlways("PlatFormMover",0,Args[0],Args[1],Args[2])
	Work: //left/right
		PLAT A 1
		Loop
		InActive:
				PLAT A 1 
		Goto Work
		Active:
		PLAT A 1 
		Goto Work
			CarryReady:
		PLAT A 1 
		Goto Work
	Carry:
		PLAT A 1
		Goto Work


	}
}



Actor ParticleGenerator  14920
{
//$Category Fx/Particle
