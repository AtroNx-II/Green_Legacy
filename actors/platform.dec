Radius 61
Height 1
+NOBLOOD //Need!
+NOGRAVITY-SHOOTABLE-SOLID+CANNOTPUSH+NOTARGET+CANPASS+NORADIUSDMG
+THRUACTORS
States
	{
	Spawn:
